<%- include ../header.ejs %>

<h1 class="deep-orange-text text-lighten-1 center"> Flight Search</h1>
<div class="container" id="flightForm">
    <div class="row">
        <form class="col s12">
            <div class="row city">
                <div class="input-field col s12">
                    <input placeholder="" id="departure-city" type="text" class="autocomplete validate">
                    <label class="active" for="departure-city">Departure City</label>
                </div>
            </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="destination" type="text" class="autocomplete validate">
                        <label for="destination">Destination</label>
                    </div>
                </div>
            <div class="row">
                <div class="input-field col s6">
                    <input id="departure-date" type="text" class="datepicker">
                    <label for="departure-date">Departure Date</label>
                </div>
                <div class="input-field col s6">
                    <input id="return-date" type="text" class="datepicker">
                    <label for="return-date">Return Date</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <select id="adults">
                        <option value="" disabled selected>Number of Travelers</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                    </select>
                    <label>Travelers</label>
                </div>
            </div>
            <div class="row">
                <input id="flightSearch" class="btn waves-effect waves-light" type="button" onclick="submitFlightSearch()" value="Search">
            </div>
        </form>
    </div>
</div>

<!-- search results -->

<div class="divider"></div>

<div style="display:none" class="container" id="results">
    <div class="row">
        <div class="col s12">
            <section id="flights-display">
                
            </section>
        </div>
    </div>
    <div class="row">
        <div class="col s12">
            <button id="flightEdit" class="btn waves-effect waves-light" type="submit" name="action" style="display:none">Edit</button>
        </div>
    </div>
</div>

<!-- need to make a _ template -->
<script type="text/template" id="flights-template">
<!-- iterate over flights array, iteneraries -->
<h1>Flights</h1>
<ul class="collection with-header">
    <li class="collection-header"><h4>Itineraries</h4></li>
        <%% flightSearchResults.results.forEach(result => { %>
            <%% result.itineraries.forEach(itinerary => { %>
            <li class="collection-item">
                <div>
                    <table class="highlight responsive-table centered teal lighten-2">
                            <thead class="white-text">
                                <tr>
                                    <th>Flight</th>
                                    <th>Origin</th>
                                    <th>Departs At</th>
                                    <th>Destination</th>
                                    <th>Arrives At</th>
                                    <th>Airline</th>
                                </tr>
                            </thead>
                            <tbody class="white-text">
                                <tr>
                                    <td>Outbound</td>
                                </tr>
                                <%% itinerary.outbound.flights.forEach(flight => { %>
                                <tr>
                                    <td><%%= flight.flight_number %></td>
                                    <td><%%= flight.origin.airport %></td>
                                    <td><%%= flight.departs_at %></td>
                                    <td><%%= flight.destination.airport %></td>
                                    <td><%%= flight.arrives_at %></td>
                                    <td><%%= flight.marketing_airline %></td>
                                </tr>
                                <%% }) %>
                                <tr>
                                    <td>Inbound</td>
                                </tr>
                                <%% itinerary.inbound.flights.forEach(flight => { %>
                                    <tr>
                                        <td><%%= flight.flight_number %></td>
                                        <td><%%= flight.origin.airport %></td>
                                        <td><%%= flight.departs_at %></td>
                                        <td><%%= flight.destination.airport %></td>
                                        <td><%%= flight.arrives_at %></td>
                                        <td><%%= flight.marketing_airline %></td>
                                    </tr>
                                <%% }) %>
                            </tbody>
                        </table>
                    <a href="#!" class="secondary-content"><i class="material-icons">send</i></a>
                    <p><%%= result.fare.total_price %></p>
                </div>
            </li>
        <%% }) %>
    <%% }) %>
</ul>
    
</script>
<script src='https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js'></script>
<script>

    var flightSearchResults;
    var screenMode = "search";
    var template = _.template($('#flights-template').html());

    function render() {
        if (screenMode === "search") {
      return;
        } else if (screenMode === "flightsView") {
            $('#flights-display').html(template({flightSearchResults}));
            $('#flightForm').hide();
            $('#results').show();
            $("#flightEdit").show();
        } else if (screenMode === "editSearch") {
            $('#flightForm').show();
            $('#results').hide();
            $("#flightEdit").hide();
        }
    }

    function submitFlightSearch() { 
    // if ( !$('#departure-city').val() || !$('#arrival-city').val() || !$('#departure-date').val() || !$('#return-date').val() || !$('#adults').val() ) return;
        console.log("Working");
        fetch('/flights/search', {
        method: 'POST',
        credentials: 'include',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ origin: $('#departure-city').val().slice(-4, -1), destination: $('#destination').val().slice(-4, -1), departureDate: $('#departure-date').val(), returnDate: $('#return-date').val(), adults: $('#adults').val() })
        })
        .then(res => res.json())
        .then(data => {
            flightSearchResults = data;
            screenMode = "flightsView";
            console.log(flightSearchResults);
            render();
        });
    }


    $(document).ready(function() {
        $("#flightEdit").on('click', function(e) {
            screenMode = "editSearch";
            render();
        });
    });
</script>

<script src="/javascripts/autofill.js"></script> 
<script src="/javascripts/datepicker.js"></script>

