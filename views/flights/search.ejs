<%- include ../header.ejs %>

<h1 class="deep-orange-text text-lighten-1 center"> Flight Search</h1>
<div class="container" id="flightForm">
    <div class="row">
        <form class="col s12">
            <div class="row city">
                <div class="input-field col s12">
                    <input placeholder="" type="text" class="autocomplete_dep validate">
                    <label class="active" for="dep_city">Departure City</label>
                </div>
            </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="arrival_city" type="text" class="autocomplete_d validate">
                        <label for="arrival_city">Arrival City</label>
                    </div>
                </div>
            <div class="row">
                <div class="input-field col s6">
                    <input id="dep_date" type="text" class="datepicker">
                    <label for="dep_date">Departure Date</label>
                </div>
                <div class="input-field col s6">
                    <input id="ret_date" type="text" class="datepicker">
                    <label for="ret_date">Return Date</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <select>
                        <option value="" disabled selected>Number of Travelers</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                    </select>
                    <label>Travelers</label>
                </div>
            </div>
            <div class="row">
            <button id="flightSearch" class="btn waves-effect waves-light" type="submit" name="action">Search
            </button>
            </div>
        </form>
    </div>

</div>


<!-- search results -->

    <div class="divider"></div>
</div>
<div id="results" style="display:none">Search results populate here</div>

<script src="/javascripts/autofill.js"></script>
<script src="/javascripts/datepicker.js"></script>
<script src="/javascripts/showFlightResults.js"></script>

